- title page.title
- footer do
  %span.noprint
    %a{:href=> absolute_path(page, :version => page.version) }= :permalink.t
    |
  = :version.t
  %a.version{:href => absolute_path(page, :version => page.version), :title => page.version }= page.version.short
  = :by.t
  = page.version.author.name
  ! , #{date page.version.date}
- if !adds_title
  %h1= title
!= content
